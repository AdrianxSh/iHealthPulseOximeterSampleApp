<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".AuthenticateActivity">

    <View
        android:id="@+id/ic_authenticate"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_authenticate_foreground"
        />

    <LinearLayout
        android:id="@+id/info"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="150dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attention"
        android:textStyle="bold"
        android:textSize="30sp"
        />

        <TextView
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You can use SDK only after pass the authorisation"
            android:textSize="15sp"
            />

        <TextView
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="According to the order, please call the SDK"
            android:textSize="15sp"
            />

        <TextView
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get more information at        https://dev.ihealthlabs.com"
            android:textSize="15sp"
            />
    </LinearLayout>

    <Button
        android:layout_below="@+id/info"
        android:layout_centerInParent="true"
        android:layout_marginTop="80dp"
        android:id="@+id/btnAuthenticate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Authenticate"
        android:textColor="#fefefe"
        android:background="@color/colorPrimary"
        android:padding="5dp"/>


</RelativeLayout>